#include <stdio.h>

int main() {
    int nums[] = {1, 2, 1};
    int n = 3;
    int totalSum = 0;

    for(int i = 0; i < n; i++) {
        int freq[100] = {0};  
        int distinct = 0;

        for(int j = i; j < n; j++) {
            if(freq[nums[j]] == 0) {
                distinct++;    
            }
            freq[nums[j]]++;

            totalSum += distinct * distinct; 
        }
    }

    printf("%d", totalSum);

    return 0;
}
Output:
15
